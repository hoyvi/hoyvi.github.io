
###czawa制作
#启动提示
echo -e "\e[33m已完成[1/4]\e[0m"
sleep 3
cd ~
wget https://hoyvi.github.io/nczawa
echo -e "\e[33m已完成[2/4]\e[0m"
sleep 2
mv czawa /sbin
chmod 777 /sbin/czawa
cd ~
echo -e "\e[33m已完成[3/4]\e[0m"
sleep 1
wget https://hoyvi.github.io/nupdate
mv update /sbin
chmod 777 /sbin/update
cd ~
echo -e "\e[33m已完成[4/4]\e[0m"
sleep 2
clear
nczawa
